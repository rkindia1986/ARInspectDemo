<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"     android:background="@android:color/white">

    <RelativeLayout android:layout_toLeftOf="@+id/img_arrow"
        android:id="@+id/factItemLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin">
        <TextView
            android:id="@+id/fact_txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start" android:text="sdsdsds sdsdsd sdsd"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/txtcolor" />
        <LinearLayout android:orientation="horizontal" android:layout_below="@+id/fact_txt_title"
            android:layout_width="match_parent" android:weightSum="1" android:layout_marginTop="@dimen/title_margin"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fact_txt_desc" android:layout_weight="0.7"
                android:layout_width="0dp" android:layout_toLeftOf="@+id/fact_img_href"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black" />

            <ImageView android:id="@+id/fact_img_href"
                android:layout_width="0dp"  android:layout_weight="0.3"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </RelativeLayout>

    <ImageView android:id="@+id/img_arrow"
        android:layout_width="wrap_content" android:layout_centerVertical="true"
        android:layout_height="wrap_content" android:layout_alignParentRight="true"
        android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />
</RelativeLayout>
